	.container.header__bottom
		a(href='#').logo
			img(src='static/img/icons/logo.png', alt='Календари')
		+b.tel-block
			+e.A.link(href='#')
				.icon-tel
				+e.SPAN 8 (800) 265-80-80
			+e.P.info Звонок по РФ бесплатный

		+b.user-actions
			+e.item._mail
				+e.A.btn(href='#!')
					+e.SPAN.count 3
					.icon-mail
			+e.item._cart
				+e.A.btn(href='#!')
					+e.SPAN.count 11
					.icon-cart
			+e.item._user
				+e.A.btn(href='#!')
					.icon-user